<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="VideoPlayerTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceMedium</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">always</item>

        <item name="android:windowBackground">@color/colorWindowBackground</item>

        <item name="popupMenuStyle">@style/Media3PopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/Media3PopupMenuStyle</item>
        <item name="actionOverflowMenuStyle">@style/Media3PopupMenuStyle</item>

        <item name="textAppearanceLargePopupMenu">@style/Media3PopupMenuTextAppearanceLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/Media3PopupMenuTextAppearanceSmall</item>
        <item name="textAppearancePopupMenuHeader">@style/Media3PopupMenuHeaderTextAppearance</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Media3PopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/Media3PopupMenuTextAppearanceSmall
        </item>
        <item name="android:textAppearancePopupMenuHeader" tools:targetApi="n">
            @style/Media3PopupMenuHeaderTextAppearance
        </item>
    </style>

    <style name="Media3PopupMenuStyle" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:popupBackground">@drawable/shape_media3_popup_background</item>
        <item name="textAppearanceLargePopupMenu">@style/Media3PopupMenuTextAppearanceLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/Media3PopupMenuTextAppearanceSmall</item>
        <item name="textAppearancePopupMenuHeader">@style/Media3PopupMenuHeaderTextAppearance</item>
        <item name="android:textAppearanceLargePopupMenu">@style/Media3PopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/Media3PopupMenuTextAppearanceSmall
        </item>
        <item name="android:textAppearancePopupMenuHeader" tools:targetApi="n">
            @style/Media3PopupMenuHeaderTextAppearance
        </item>
    </style>

    <style name="Media3PopupMenuTextAppearanceSmall">
        <item name="android:textColor">@color/colorOnSurfaceMedium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Media3PopupMenuHeaderTextAppearance">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Media3PopupMenuTextAppearanceLarge">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Media3DialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Media3DialogStyle.Button" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="minWidth">64dp</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="Media3DialogTitleTextBoldMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Media3MaterialButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">@color/colorMaterialButtonBackgroundPressed</item>
        <item name="backgroundTint">@color/colorMaterialButtonBackground</item>
        <item name="strokeColor">@color/colorMaterialButtonStroke</item>
        <item name="strokeWidth">0.8dp</item>
        <item name="android:textColor">@color/colorOnSurfaceMedium</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>