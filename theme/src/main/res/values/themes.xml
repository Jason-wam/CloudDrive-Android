<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/isStatusDarkFont</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">
            @bool/isStatusDarkFont
        </item>
        <item name="android:navigationBarDividerColor" tools:targetApi="o_mr1">
            @color/colorNavigationBar
        </item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Material3.LabelLarge</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>

        <item name="popupMenuStyle">@style/MyPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenuStyle</item>
        <item name="actionOverflowMenuStyle">@style/MyPopupMenuStyle</item>

        <item name="textAppearanceLargePopupMenu">@style/MyTextAppearanceLargePopupMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/MyTextAppearanceSmallPopupMenu</item>
        <item name="textAppearancePopupMenuHeader">@style/MyTextAppearancePopupMenuHeader</item>
        <item name="android:textAppearanceLargePopupMenu">@style/MyTextAppearanceLargePopupMenu
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/MyTextAppearanceSmallPopupMenu
        </item>
        <item name="android:textAppearancePopupMenuHeader" tools:targetApi="n">
            @style/MyTextAppearancePopupMenuHeader
        </item>
    </style>

    <style name="TitleTextBoldAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SubtitleTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabTextBoldMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="bottomSheetStyle">@style/TransparentSheetStyle</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Material3.LabelLarge</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
    </style>

    <style name="TransparentSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogTitleTextBoldMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyPopupMenuStyle" parent="@style/Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/shape_popup_background</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_high_type</item>
        <item name="textAppearanceLargePopupMenu">@color/material_on_surface_emphasis_high_type
        </item>
        <item name="textAppearanceSmallPopupMenu">@color/material_on_surface_emphasis_medium</item>
    </style>

    <style name="MyTextAppearanceLargePopupMenu">
        <item name="android:textColor">@color/material_on_surface_emphasis_high_type</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyTextAppearancePopupMenuHeader">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyTextAppearanceSmallPopupMenu">
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MaterialButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">@dimen/materialButtonRadius</item>
        <item name="rippleColor">@color/colorMaterialButtonBackgroundPressed</item>
        <item name="backgroundTint">@color/colorMaterialButtonBackground</item>
        <item name="strokeColor">@color/colorMaterialButtonStroke</item>
        <item name="strokeWidth">@dimen/materialButtonStrokeWidth</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="DialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogStyle.Button" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="minWidth">64dp</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="Slider.labelStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="shapeAppearance">@style/Slider.labelStyle.ShapeAppearance</item>
        <item name="android:textAppearance">@style/Slider.labelStyle.TextAppearance</item>
    </style>

    <style name="Slider.labelStyle.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.Tooltip">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="Slider.labelStyle.TextAppearance" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/material_on_surface_emphasis_high_type</item>
    </style>

</resources>